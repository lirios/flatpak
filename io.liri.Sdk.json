                "linux-g++",
                "-optimized-qmake",
                "-verbose",
                "-nomake",
                "examples",
                "-nomake",
                "tests",
                "-system-harfbuzz",
                "-system-sqlite",
                "-accessibility",
                "-dbus-linked",
                "-fontconfig",
                "-glib",
                "-openssl-linked",
                "-no-pch",
                "-no-rpath",
                "-no-separate-debug-info",
                "-no-use-gold-linker",
                "-reduce-relocations",
                "-no-directfb",
                "-no-linuxfb",
                "-no-eglfs",
                "-no-kms",
                "-no-gbm",
                "-no-cups",
                "-no-mirclient",
                "-system-proxies"
