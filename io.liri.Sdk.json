{
    "branch": "master",
    "build-options": {
        "arch": {
            "x86_64": {
                "cflags": "-O3 -g",
                "cxxflags": "-O3 -g"
            }
        },
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "build-runtime": true,
    "cleanup": [
        "/cache",
        "/man",
        "/share/doc",
        "/share/man",
        "/share/gtk-doc",
        "/share/devhelp",
        "/lib/systemd",
        "*.la",
        "*.a"
    ],
    "cleanup-commands": [
        "touch -d @0 /usr/share/fonts",
        "touch -d @0 /usr/share/fonts/*",
        "fc-cache -fs"
    ],
    "cleanup-platform": [
        "/include",
        "/share/aclocal",
        "/share/pkgconfig",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/gir-1.0",
        "/share/vala"
    ],
    "id": "io.liri.Sdk",
    "id-platform": "io.liri.Platform",
    "initial-debug": "org.freedesktop.Debug",
    "metadata": "metadata.sdk",
    "metadata-platform": "metadata.platform",
