{
    "app-id": "io.liri.Browser",
    "branch": "@@APP_BRANCH@@",
    "runtime": "io.liri.Platform",
    "runtime-version": "@@RUNTIME_BRANCH@@",
    "sdk": "io.liri.Sdk",
    "command": "liri-browser",
    "tags": [ "nightly" ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "browser",
            "buildsystem": "simple",
            "build-commands": [
                "./qbs-configure",
                "./qbs-build qbs.buildVariant:debug modules.qbs.installRoot:/ modules.lirideployment.prefix:/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/lirios/browser.git",
                    "branch": "develop"
                },
                {
                    "dest-filename": "qbs-configure",
                    "path": "sources/qbs-configure",
                    "type": "file"
                },
                {
                    "dest-filename": "qbs-build",
                    "path": "sources/qbs-build",
                    "type": "file"
                }
            ]
        }
    ]
}
