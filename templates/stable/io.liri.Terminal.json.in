{
    "id": "io.liri.Terminal",
    "branch": "@@APP_BRANCH@@",
    "runtime": "io.liri.Platform",
    "runtime-version": "@@RUNTIME_BRANCH@@",
    "sdk": "io.liri.Sdk",
    "command": "liri-terminal",
    "tags": [ "stable" ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri",
        "--env=SESSION_MANAGER="
    ],
    "modules": [
        {
            "name": "terminal",
            "buildsystem": "simple",
            "build-commands": [
                "./qbs-configure",
                "./qbs-build qbs.buildVariant:debug modules.qbs.installRoot:/ modules.lirideployment.prefix:/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/lirios/terminal.git",
                    "branch": "v0.2.0"
                },
                {
                    "dest-filename": "qbs-configure",
                    "path": "sources/qbs-configure",
                    "type": "file"
                },
                {
                    "dest-filename": "qbs-build",
                    "path": "sources/qbs-build",
                    "type": "file"
                }
            ]
        }
    ]
}
